<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.gss.aplsuaraburung.HalamanUtama"
    android:background="@drawable/bgbrg">

    <RelativeLayout
        android:layout_marginTop="32dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtclub"
            android:text="BURUNG GACOR"
            android:fontFamily="serif"
            android:textSize="27dp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/txtclub"
            android:text="Lengkap"
            android:fontFamily="serif"
            android:textSize="27dp"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal"
            android:textColor="#FAFAFA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentRight="true"
            android:src="@drawable/logooo"
            android:layout_width="90dp"
            android:layout_height="70dp" />

    </RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_marginTop="20dp"
            android:columnCount="1"
            android:rowCount="3"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_rowWeight="1"
                android:layout_margin="12dp">

                <TextView
                    android:layout_below="@+id/txtclub"
                    android:text="Jenis-Jenis Burung"
                    android:fontFamily="serif"
                    android:textSize="24dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_horizontal"
                    android:textColor="#FAFAFA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="12dp">

                <Button
                    android:id="@+id/burung1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:text="1. LOVE BIRD"
                    android:textColor="#fff"
                    android:height="90dp"
                    android:background="@drawable/custom1"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-black"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="12dp">

                <Button
                    android:id="@+id/burung2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:text="2. TRUCUK"
                    android:textColor="#fff"
                    android:height="90dp"
                    android:background="@drawable/custom1"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="12dp">

                <Button
                    android:id="@+id/burung3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:text="3. KACER"
                    android:height="90dp"
                    android:textColor="#fff"
                    android:background="@drawable/custom1"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-black"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
